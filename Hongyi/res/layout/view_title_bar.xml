<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/distance_50"
    android:background="@color/nav_back_normal" >

    <LinearLayout
        android:id="@+id/back_finished_lay"
        android:layout_width="@dimen/distance_50"
        android:layout_height="@dimen/distance_50"
        android:background="@drawable/title_bar_finish_selector"
        android:gravity="center" >

        <ImageView
            android:id="@+id/view_left_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_nav_back" />
    </LinearLayout>

    <TextView
        android:id="@+id/title_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_18"
        android:textStyle="bold" >
    </TextView>

    <FrameLayout
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/distance_5"
        android:layout_marginRight="@dimen/distance_5" >

        <TextView
            android:id="@+id/title_login_in_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="登录"
            android:layout_gravity="center_vertical"
            android:textColor="@color/login_type_color_selector"
            android:textSize="@dimen/font_size_15"
             >
        </TextView>

        <LinearLayout
            android:id="@+id/login_in_lay"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_title_bar_order"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/distance_5"
                android:layout_marginRight="@dimen/distance_5"
                android:layout_weight="1"
                android:background="@drawable/title_bar_order_selector" />

            <ImageView
                android:id="@+id/iv_title_bar_home"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/title_bar_home_selector" />
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>